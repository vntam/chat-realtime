# =========================
# DOCKER ENVIRONMENT CONFIGURATION
# =========================
# Copy file này thành .env.docker và điền các giá trị thực tế

# JWT Secrets (QUAN TRỌNG: Thay đổi trong production!)
JWT_ACCESS_SECRET=supersecret_access_change_me_in_production
JWT_REFRESH_SECRET=supersecret_refresh_change_me_in_production

# Database Credentials (được cấu hình trong docker-compose.yml)
# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_DB=chat_user_service

# MongoDB
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=mongo123

# RabbitMQ
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=rabbitmq123

# =========================
# OPTIONAL CONFIGURATIONS
# =========================

# File Upload Limits
MAX_FILE_SIZE=10485760        # 10MB
MAX_IMAGE_SIZE=5242880        # 5MB
MAX_VIDEO_SIZE=52428800       # 50MB

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# S3 Storage (Tắt mặc định, bật nếu cần)
USE_S3_STORAGE=false
AWS_S3_BUCKET_NAME=chat-uploads
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
